generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Status {
  uploading
  processing
  ready
  failed
  corrupted
}


model User {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  email       String            @unique
  password    String
  audioFile   AudioFile[]
  videoFiles  VideoFile[]
}

model VideoFile {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  user            User        @relation(fields: [userId], references: [id])
  userId          String      @db.ObjectId
  audioFile       AudioFile?  @relation(fields: [audioId], references: [id])
  audioId         String?     @db.ObjectId
  s3              Json?
  filename        String?     @default("")
  format_name     String?     @default("")
  duration        Float?      @default(0)
  size            BigInt      @default(0)
  bit_rate        BigInt?     @default(0)
  codec           String?     @default("")
  width           Int?        @default(0)
  height          Int?        @default(0)
  pix_fmt         String?     @default("")
  fps             Float?      @default(0)
  aspect_ratio    String?     @default("")
  color_space     String?     @default("")
  color_primaries String?     @default("")
  color_transfer  String?     @default("")
  language        String?     @default("")
  title           String?     @default("")
  has_audio       Boolean?    @default(false)
  status          Status      @default(uploading)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}



model AudioFile {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  user        User        @relation(fields: [userId], references: [id])
  videoFile   VideoFile[]
  userId      String      @db.ObjectId
  s3          Json?
  duration    Float?      @default(0)
  sampleRate  Int?        @default(44100)
  bitRate     Int?        @default(1411200)
  channels    Int?        @default(2)
  codec       String?     @default("mp3")
  fileSize    BigInt?     @default(43)
  fileName    String?     @default("")
  fileType    String?     @default("")
  title       String?     @default("")
  album       String?     @default("")
  genre       String?     @default("")
  trackNumber Int?
  comments    String?     @default("")       
  status      Status      @default(uploading)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
